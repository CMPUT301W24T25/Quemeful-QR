<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewEventActivity"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/event_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:text="Event Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/backTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="Event Preview"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/confirm_check_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_event_time"
        android:layout_marginTop="40dp"
        android:backgroundTint="#E3D39E"
        android:text="Confirm Check In"
        android:textColor="@color/black"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/confirm_check_in_button"
        android:backgroundTint="#E3D39E"
        android:text="Cancel"
        android:textColor="@color/black"
        android:layout_centerInParent="true"/>



    <TextView
        android:id="@+id/textview_event_description"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/event_name_textview"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center" />

    <TextView
        android:id="@+id/textview_event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_event_description"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center" />

    <TextView
        android:id="@+id/textview_event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_event_date"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center" />


</RelativeLayout>
